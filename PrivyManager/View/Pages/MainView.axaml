                    Width="320"
                    Height="180"
                    Margin="5" />
                <controls:AccountCard
                    Width="320"
                    Height="180"
                    Margin="5" />
                <controls:AccountCard
                    Width="320"
                    Height="180"
                    Margin="5" />
                <controls:AccountCard
                    Width="320"
                    Height="180"
                    Margin="5" />
