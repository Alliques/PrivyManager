<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:PrivyManager.Controls">

    <Style Selector="Button.MenuButton">
        <Setter Property="Template" Value="{DynamicResource MenuItemButton}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="Button.MenuButton:pointerover">
        <Setter Property="Background" Value="{DynamicResource JacoLastBreathLightTramsparentBrush}" />
        <Setter Property="TextBlock.Foreground" Value="{DynamicResource JacoLastBreathLight}" />
    </Style>
    <Style Selector="Button.MenuButton:pressed">
        <Setter Property="Background" Value="{DynamicResource JacoLastBreathLightTramsparentBrush}" />
        <Setter Property="TextBlock.Foreground" Value="{DynamicResource JacoLastBreathLight}" />
    </Style>
    <Style Selector="Button.MenuButton:pointerover /template/ PathIcon">
        <Setter Property="Foreground" Value="{DynamicResource JacoLastBreathLight}" />
    </Style>
    <Style Selector="Button:pressed  /template/ PathIcon">
        <Setter Property="Foreground" Value="{DynamicResource JacoLastBreathLight}" />
    </Style>
</Styles>
